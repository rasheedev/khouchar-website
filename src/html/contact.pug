- var whatPage = "contact";

<!DOCTYPE html>
html(lang="en")

    head

        include includes/head.pug
  
    body

        //- Navbar
        include sections/navbar.pug


        //- Preloader
        div(id="preloader")
            div(class="spinner")


        // Contact Page
        section(id="contact-page")
            div(class="bg-image")
            div(class="container")
                div(class="contact-page-wrap")
                    div(class="row")
                        div(class="col-lg-6")
                            div(class="map")
                                iframe(src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d831.0460043891684!2d-7.614091170802125!3d33.57457111616022!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xda7d2a7c8c773cb%3A0xacf3b4b08ac6644!2sKhouchar!5e0!3m2!1sfr!2sma!4v1523753075615" height="450" frameborder="0" style="border:0" allowfullscreen="")
                        div(class="col-lg-6 pl-4")
                            div(class="contact-form mt-lg-0")
                                h2 Contactez Nous
                                form(action="#")
                                    div(class="row")
                                        div(class="col-lg-6")
                                            div(class="form-group mt-lg-2")
                                                input(class="form-control" name="raison" type="text" placeholder="Raison Sociale*" required="")
                                        div(class="col-lg-6")
                                            div(class="form-group mt-2")
                                                input(class="form-control" name="nom" type="text" placeholder="Nom & Pr√©nom*" required="")
                                    div(class="row")
                                        div(class="col-lg-12")
                                            div(class="form-group mt-2")
                                                input(class="form-control" name="email" type="email" placeholder="E-Mail*" required="")
                                    div(class="row")
                                        div(class="col-lg-12")
                                            div(class="form-group mt-2")
                                                textarea(class="form-control" name="message" rows="6" placeholder="Message...*")
                                    div(class="row")
                                        div(class="col-lg-12")
                                            input(class="btn btn-custom" type="submit" value="Envoyer")


        //- Footer
        include sections/footer.pug


        // Scripts
        include includes/scripts.pug